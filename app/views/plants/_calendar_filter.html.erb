<%= form_tag plants_path, method: :get, class: "month-filter", id: "month-filter-form", remote: true do %>
  <% {Janvier: 1, Février: 2, Mars: 3, Avril: 4, Mai: 5, Juin: 6, Juillet: 7, Août: 8, Septembre: 9, Octobre: 10, Novembre: 11, Décembre: 12 }.each do |month, number| %>
    <% if @calendar_params.include? number %>
      <%= check_box_tag number, month, true %>
      <%= label_tag number, month, style: '', class: "col-3 text-center p-0" %>
    <% else %>
      <%= check_box_tag number, month %>
      <%= label_tag number, month, style: '', class: "col-3 text-center p-0" %>
    <% end %>
  <% end %>
    <%= text_field_tag :plant_type, params[:plant_type] %>
    <%= text_field_tag :plant_query, params[:plant_query] %>
  <%= submit_tag "Apply filters", class: 'btn btn-primary', name: nil %>
<% end %>
